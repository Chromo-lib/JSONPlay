{
  "manifest_version": 3,
  "name": "JSONPLay",
  "description": "API Testing Tool, JSON viewer and playground.",
  "version": "1.1.5",
  "host_permissions": [
    "<all_urls>",
    "https://*/"
  ],
  "icons": {
    "512": "icons/512.png",
    "128": "icons/128.png",
    "64": "icons/64.png",
    "32": "icons/32.png"
  },
  "action": {    
    "default_title": "JSONPLay",
    "default_popup": "popup.html",
    "browser_style": true
  }
}