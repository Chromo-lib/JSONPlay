{
  "manifest_version": 2,
  "name": "JSONPLay",
  "description": "API Testing Tool, JSON viewer and playground.",
  "version": "1.1.0",
  "icons": {
    "512": "icons/512.png",
    "128": "icons/128.png",
    "64": "icons/64.png",
    "32": "icons/32.png"
  },
  "browser_action": {
    "default_title": "JSONPLay",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "permissions": [
    "activeTab",
    "bookmarks"
  ]
}